<h1>Listing updates</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Action</th>
    <th>Date</th>
    <th>Private</th>
    <th>Link</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @updates.each do |update| %>
  <tr>
    <td><%= update.name %></td>
    <td><%= update.action %></td>
    <td><%= update.date %></td>
    <td><%= update.private %></td>
    <td><%= update.link %></td>
    <td><%= link_to 'Show', update %></td>
    <td><%= link_to 'Edit', edit_update_path(update) %></td>
    <td><%= link_to 'Destroy', update, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

